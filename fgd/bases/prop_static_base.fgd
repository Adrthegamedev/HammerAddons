
@BaseClass base(Angles, DXLevelChoice, SystemLevelChoice, Reflection, Shadow) 
	appliesto(ASW, EP1, EP2, HL2, P2, TF2, CSGO) = prop_static_base
	[
	model(studio) : "World Model"
	skin(integer) : "Skin" : 0 : "Some models have multiple versions of their textures, called skins. Set this to a number other than 0 to use that skin instead of the default."
	solid(choices) : "Collisions" : "6" =
		[
		0: "Not Solid"
		2: "Use Bounding Box"
		6: "Use VPhysics"
		]

	disableshadows[!P2](choices) : "Disable Shadows" : "0" =
		[
		0: "No"
		1: "Yes"
		]

	disableshadows[ASW, !P2](boolean) : "Disable Shadows" : 0
	screenspacefade(choices) : "Screen Space Fade" : "0" : "The method by which the fading distance should be determined. If 'No', the fade distances is the distance from the player's view to the object, in inches. If 'Yes', the fade distance is the size of the object onscreen, in pixels." =
		[
		0: "No"
		1: "Yes"
		]

	screenspacefade[ASW](boolean) : "Screen Space Fade" : 0 : "The method by which the fading distance should be determined. If 'No', the fade distances is the distance from the player's view to the object, in inches. If 'Yes', the fade distance is the size of the object onscreen, in pixels."
	fademindist(float) : "Start Fade Dist/Pixels" : -1 : "Distance at which the prop starts to fade (<0 = use fademaxdist). If 'Screen Space Fade' is selected, this represents the number of pixels wide covered by the prop when it starts to fade."
	fademaxdist(float) : "End Fade Dist/Pixels" : 0 : "Maximum distance at which the prop is visible (0 = don't fade out). If 'Screen Space Fade' is selected, this represents the *minimum* number of pixels wide covered by the prop when it fades."
	fadescale(float) : "Fade Scale" : 1 : "If you specify a fade in the worldspawn, or if the engine is running under dx7 [hl2/ep1/portal] or dx8 [ep2/tf], then the engine will forcibly fade out props even if fademindist/fademaxdist isn't specified. This scale factor gives you some control over the fade. Using 0 here turns off the forcible fades. Numbers smaller than 1 cause the prop to fade out at further distances, and greater than 1 cause it to fade out at closer distances."
	fadescale[ASW](float) : "Fade Scale" : 1 : "If you specify a fade in the worldspawn, or if the engine is running under dx7 [hl2/ep1/portal] or dx8 [ep2/tf], then the engine will forcibly fade out props even if fademindist/fademaxdist isn't specified. This scale factor gives you some control over the fade. Using 0 here turns off the forcible fades. Numbers smaller than 1 cause the prop to fade out at further distances,and greater than 1 cause it to fade out at closer distances."
	lightingorigin(target_destination) : "Lighting Origin" : : "Select an info_lighting to specify a location to sample lighting from, instead of using this entity's origin."
	disablevertexlighting(choices) : "Disable Vertex lighting" : "0" =
		[
		0: "No"
		1: "Yes"
		]

	disablevertexlighting[ASW](boolean) : "Disable Vertex lighting" : 0 : "Disable per-vertex lighting on this object."
	disableselfshadowing(choices) : "Disable Self-Shadowing with vertex lighting" : "0" =
		[
		0: "No"
		1: "Yes"
		]

	disableselfshadowing[ASW](boolean) : "Disable Self-Shadowing" : 0 : "When vertex lighting is enabled, prevent the geometry from self-shadowing -- casting shadows onto itself."
	ignorenormals(choices) : "Ignore surface normal for computing vertex lighting" : "0" =
		[
		0: "No"
		1: "Yes"
		]

	ignorenormals[ASW](boolean) : "Ignore Surface Normal" : 0 : "When vertex lighting is enabled, ignore the surface normal of faces when calculating the vertex lighting. Useful for thin, translucent objects such as leaves on foliage props."
	renderamt[ASW, !TF2](integer) : "Alpha" : 255 : "Alpha of the fade, where 0 = fully transparent and 255 = fully opaque."
	rendercolor[ASW, !TF2](color255) : "Color (R G B)" : "255 255 255"
	generatelightmaps[!CSGO, TF2](choices) : "Generate (and use) lightmaps for this static prop" : "0" =
		[
		0: "No"
		1: "Yes"
		]

	lightmapresolutionx[!CSGO, TF2](integer) : "Lightmap Resolution X" : 32 : "The resolution of the generated lightmap in the X (or U) direction (only used if Generate Lightmaps is Yes) "
	lightmapresolutiony[!CSGO, TF2](integer) : "Lightmap Resolution Y" : 32 : "The resolution of the generated lightmap in the Y (or V) direction (only used if Generate Lightmaps is Yes) "
	enablelightbounce[CSGO](boolean) : "Enable Bounced Lighting" : 0 : "Whether VRAD should create indirect lighting from this prop."
	preventpropcombine[CSGO](boolean) : "Disable Prop Combine" : 0 : "Prevent this static prop from combining with any other static props in vbsp."
	uniformscale[CSGO](float) : "Uniform Scale Override" : 1 : "Resize the static prop."
	]
