
@FilterClass base(BaseFilter, BaseFilter) 
	appliesto(ASW, EP1, EP2, HL2, P2, TF2, CSGO) 
	iconsprite("editor/filter_class.vmt") 
	color(0 255 0) 
	iconsprite("editor/filter_mass.vmt") = filter_activator_mass_greater: "A filter that filters by the mass of the activator."
